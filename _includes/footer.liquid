{% comment %}
  ==========================================
  ORIGINAL FOOTER CODE (before modifications)
  ==========================================
  {% capture footer_contents %}
    &copy; Copyright {{ site.time | date: '%Y' }}
    {{ site.first_name }}
    {{ site.middle_name }}
    {{ site.last_name }}. {{ site.footer_text }}
    {% if site.impressum_path %}
      <a href="{{ site.url }}{{ site.baseurl }}{{ site.impressum_path }}">Impressum</a>.
    {% endif %}
    {% if site.last_updated %}
      Last updated: {{ 'now' | date: '%B %d, %Y' }}.
    {% endif %}
  {% endcapture %}
  {% if site.footer_fixed %}
    <footer class="fixed-bottom" role="contentinfo">
      <div class="container mt-0">
        {{ footer_contents }}
      </div>
    </footer>
  {% else %}
    <footer class="sticky-bottom mt-5" role="contentinfo">
      {% if site.newsletter.enabled %}
        {% include newsletter.liquid %}
      {% endif %}
      <div class="container">
        {{ footer_contents }}
      </div>
    </footer>
  {% endif %}
  ==========================================
{% endcomment %}

{% comment %} Modified footer with social icons {% endcomment %}
{% capture footer_contents %}
  <!-- Show social icons only on about page -->
  {% if page.url == "/" or page.layout == "about" %}
    <div class="social">
      <div class="contact-icons">
        {% include social.liquid %}
      </div>
    </div>
  {% endif %}
  
  <!-- Existing copyright text -->
  &copy; Copyright {{ site.time | date: '%Y' }}
  {{ site.first_name }}
  {{ site.middle_name }}
  {{ site.last_name }}. {{ site.footer_text }}
  {% if site.impressum_path %}
    <a href="{{ site.url }}{{ site.baseurl }}{{ site.impressum_path }}">Impressum</a>.
  {% endif %}
  {% if site.last_updated %}
    Last updated: {{ 'now' | date: '%B %d, %Y' }}.
  {% endif %}
{% endcapture %}

{% if site.footer_fixed %}
  <footer class="fixed-bottom" role="contentinfo">
    <div class="container mt-0">
      {{ footer_contents }}
    </div>
  </footer>
{% else %}
  <footer class="sticky-bottom mt-5" role="contentinfo">
    {% if site.newsletter.enabled %}
      {% include newsletter.liquid %}
    {% endif %}
    <div class="container">
      {{ footer_contents }}
    </div>
  </footer>
{% endif %}
