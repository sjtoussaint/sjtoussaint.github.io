{% for social in site.data.socials %}
  {% case social[0] %}
    {% when 'acm_id' %}
      <a href="https://dl.acm.org/profile/{{ social[1] }}/" title="ACM DL">
        <i class="ai ai-acm"></i>
        <span class="social-label">ACM</span>
      </a>
    {% when 'blogger_url' %}
      <a href="{{ social[1] }}" title="Blogger">
        <i class="fa-brands fa-blogger-b"></i>
        <span class="social-label">Blogger</span>
      </a>
    {% when 'bluesky_url' %}
      <a href="{{ social[1] }}" title="Bluesky">
        <i class="fa-brands fa-bluesky"></i>
        <span class="social-label">Bluesky</span>
      </a>
    {% when 'dblp_url' %}
      <a href="{{ social[1] }}" title="DBLP">
        <i class="ai ai-dblp"></i>
        <span class="social-label">DBLP</span>
      </a>
    {% when 'discord_id' %}
      <a href="https://discord.com/users/{{ social[1] }}" title="Discord">
        <i class="fa-brands fa-discord"></i>
        <span class="social-label">{{ social[1] }}</span>
      </a>
    {% when 'email' %}
      <a href="mailto:{{ social[1] | encode_email }}" title="email">
        <i class="fa-solid fa-envelope"></i>
        <span class="social-label">{{ social[1] }}</span>
      </a>
    {% when 'facebook_id' %}
      <a href="https://facebook.com/{{ social[1] }}" title="Facebook">
        <i class="fa-brands fa-facebook"></i>
        <span class="social-label">{{ social[1] }}</span>
      </a>
    {% when 'flickr_id' %}
      <a href="https://www.flickr.com/{{ social[1] }}" title="Flickr">
        <i class="fa-brands fa-flickr"></i>
        <span class="social-label">{{ social[1] }}</span>
      </a>
    {% when 'github_username' %}
      <a href="https://github.com/{{ social[1] }}" title="GitHub">
        <i class="fa-brands fa-github"></i>
        <span class="social-label">@{{ social[1] }}</span>
      </a>
    {% when 'gitlab_username' %}
      <a href="https://gitlab.com/{{ social[1] }}" title="GitLab">
        <i class="fa-brands fa-gitlab"></i>
        <span class="social-label">@{{ social[1] }}</span>
      </a>
    {% when 'ieee_id' %}
      <a href="https://ieeexplore.ieee.org/author/{{ social[1] }}/" title="IEEE Xplore">
        <i class="ai ai-ieee"></i>
        <span class="social-label">IEEE</span>
      </a>
    {% when 'inspirehep_id' %}
      <a href="https://inspirehep.net/authors/{{ social[1] }}" title="Inspire HEP">
        <i class="ai ai-inspire"></i>
        <span class="social-label">INSPIRE</span>
      </a>
    {% when 'instagram_id' %}
      <a href="https://instagram.com/{{ social[1] }}" title="Instagram">
        <i class="fa-brands fa-instagram"></i>
        <span class="social-label">@{{ social[1] }}</span>
      </a>
    {% when 'kaggle_id' %}
      <a href="https://www.kaggle.com/{{ social[1] }}" title="Kaggle">
        <i class="fa-brands fa-kaggle"></i>
        <span class="social-label">{{ social[1] }}</span>
      </a>
    {% when 'keybase_username' %}
      <a href="https://keybase.io/{{ social[1] }}" title="Keybase">
        <i class="fa-brands fa-keybase"></i>
        <span class="social-label">{{ social[1] }}</span>
      </a>
    {% when 'lastfm_id' %}
      <a href="https://www.last.fm/user/{{ social[1] }}" title="Last FM">
        <i class="fa-brands fa-lastfm"></i>
        <span class="social-label">{{ social[1] }}</span>
      </a>
    {% when 'lattes_id' %}
      <a href="http://lattes.cnpq.br/{{ social[1] }}" target="_blank" title="Lattes">
        <i class="ai ai-lattes"></i>
        <span class="social-label">Lattes</span>
      </a>
    {% when 'leetcode_id' %}
      <a href="https://leetcode.com/u/{{ social[1] }}/" target="_blank" title="LeetCode">
        <i class="si si-leetcode"></i>
        <span class="social-label">{{ social[1] }}</span>
      </a>
    {% when 'linkedin_username' %}
      <a href="https://www.linkedin.com/in/{{ social[1] }}" title="LinkedIn">
        <i class="fa-brands fa-linkedin"></i>
        <span class="social-label">{{ social[1] }}</span>
      </a>
    {% when 'mastodon_username' %}
      <a rel="me" href="https://{{ social[1] }}" title="Mastodon">
        <i class="fa-brands fa-mastodon"></i>
        <span class="social-label">@{{ social[1] | split: '/' | last }}</span>
      </a>
    {% when 'medium_username' %}
      <a href="https://medium.com/@{{ social[1] }}" title="Medium">
        <i class="fa-brands fa-medium"></i>
        <span class="social-label">@{{ social[1] }}</span>
      </a>
    {% when 'orcid_id' %}
      <a href="https://orcid.org/{{ social[1] }}" title="ORCID">
        <i class="ai ai-orcid"></i>
        <span class="social-label">{{ social[1] }}</span>
      </a>
    {% when 'osf_id' %}
      <a href="https://osf.io/{{ social[1] }}/" title="Open Science Framework">
        <i class="ai ai-osf"></i>
        <span class="social-label">OSF</span>
      </a>
    {% when 'pinterest_id' %}
      <a href="https://www.pinterest.com/{{ social[1] }}" title="Pinterest">
        <i class="fa-brands fa-pinterest"></i>
        <span class="social-label">{{ social[1] }}</span>
      </a>
    {% when 'publons_id' %}
      <a href="https://publons.com/a/{{ social[1] }}/" title="Publons">
        <i class="ai ai-publons"></i>
        <span class="social-label">Publons</span>
      </a>
    {% when 'quora_username' %}
      <a href="https://www.quora.com/profile/{{ social[1] }}" title="Quora">
        <i class="fa-brands fa-quora"></i>
        <span class="social-label">{{ social[1] }}</span>
      </a>
    {% when 'research_gate_profile' %}
      <a href="https://www.researchgate.net/profile/{{ social[1] }}/" title="ResearchGate">
        <i class="ai ai-researchgate"></i>
        <span class="social-label">RG</span>
      </a>
    {% when 'rss_icon' %}
      <a href="{{ site.baseurl }}/feed.xml" title="RSS Feed">
        <i class="fa-solid fa-square-rss"></i>
        <span class="social-label">RSS</span>
      </a>
    {% when 'scholar_userid' %}
      <a href="https://scholar.google.com/citations?user={{ social[1] }}" title="Google Scholar">
        <i class="ai ai-google-scholar"></i>
        <span class="social-label">Scholar</span>
      </a>
    {% when 'scopus_id' %}
      <a href="https://www.scopus.com/authid/detail.uri?authorId={{ social[1] }}" title="Scopus">
        <i class="ai ai-scopus"></i>
        <span class="social-label">Scopus</span>
      </a>
    {% when 'semanticscholar_id' %}
      <a href="https://www.semanticscholar.org/author/{{ social[1] }}" title="Semantic Scholar">
        <i class="ai ai-semantic-scholar"></i>
        <span class="social-label">S2</span>
      </a>
    {% when 'spotify_id' %}
      <a href="https://open.spotify.com/user/{{ social[1] }}" title="Spotify">
        <i class="fa-brands fa-spotify"></i>
        <span class="social-label">{{ social[1] }}</span>
      </a>
    {% when 'stackoverflow_id' %}
      <a href="https://stackoverflow.com/users/{{ social[1] }}" title="Stackoverflow">
        <i class="fa-brands fa-stack-overflow"></i>
        <span class="social-label">SO</span>
      </a>
    {% when 'strava_userid' %}
      <a href="https://www.strava.com/athletes/{{ social[1] }}" title="Strava">
        <i class="fa-brands fa-strava"></i>
        <span class="social-label">{{ social[1] }}</span>
      </a>
    {% when 'telegram_username' %}
      <a href="https://telegram.me/{{ social[1] }}" title="telegram">
        <i class="fa-brands fa-telegram"></i>
        <span class="social-label">@{{ social[1] }}</span>
      </a>
    {% when 'unsplash_id' %}
      <a href="https://unsplash.com/@{{ social[1] }}" title="Unsplash">
        <i class="fa-brands fa-unsplash"></i>
        <span class="social-label">@{{ social[1] }}</span>
      </a>
    {% when 'wechat_qr' %}
      <a id="WeChatBtn" title="WeChat">
        <i class="fa-brands fa-weixin"></i>
        <span class="social-label">WeChat</span>
      </a>
      <div id="WeChatMod" class="wechat-modal">
        <img src="{{ social[1] | prepend: 'assets/img/' | relative_url }}" alt="WeChat QR" id="WeChatQR">
      </div>
      <script defer src="{{ '/assets/js/wechat.js' | relative_url | bust_file_cache }}" type="text/javascript"></script>
    {% when 'whatsapp_number' %}
      <a href="https://wa.me/{{ social[1] }}" title="whatsapp">
        <i class="fa-brands fa-whatsapp"></i>
        <span class="social-label">{{ social[1] }}</span>
      </a>
    {% when 'wikidata_id' %}
      <a href="https://www.wikidata.org/wiki/{{ social[1] }}" title="Wikidata">
        <i class="fa-solid fa-barcode"></i>
        <span class="social-label">{{ social[1] }}</span>
      </a>
    {% when 'wikipedia_id' %}
      <a href="https://wikipedia.org/wiki/User:{{ social[1] }}" title="Wikipedia">
        <i class="fa-brands fa-wikipedia-w"></i>
        <span class="social-label">{{ social[1] }}</span>
      </a>
    {% when 'work_url' %}
      <a href="{{ social[1] }}" title="Work">
        <i class="fa-solid fa-briefcase"></i>
        <span class="social-label">Work</span>
      </a>
    {% when 'x_username' %}
      <a href="https://twitter.com/{{ social[1] }}" title="X">
        <i class="fa-brands fa-x-twitter"></i>
        <span class="social-label">@{{ social[1] }}</span>
      </a>
    {% when 'youtube_id' %}
      <a href="https://youtube.com/@{{ social[1] }}" title="YouTube">
        <i class="fa-brands fa-youtube"></i>
        <span class="social-label">@{{ social[1] }}</span>
      </a>
    {% when 'zotero_username' %}
      <a href="https://www.zotero.org/{{ social[1] }}" title="Zotero">
        <i class="ai ai-zotero"></i>
        <span class="social-label">{{ social[1] }}</span>
      </a>
    {% else %}
      <a href="{{ social[1].url }}" title="{{ social[1].title }}">
        {% assign file_ext = social[1].logo | split: '.' | last %}
        {% if file_ext == 'svg' %}
          <svg>
            <image xlink:href="{% if social[1].logo contains '://' %}{{ social[1].logo }}{% else %}{{ social[1].logo | relative_url }}{% endif %}" />
          </svg>
        {% else %}
          <img
            src="{% if social[1].logo contains '://' %}{{ social[1].logo }}{% else %}{{ social[1].logo | relative_url }}{% endif %}"
            alt="{{ social[1].title }}"
          >
        {% endif %}
        <span class="social-label">{{ social[1].title }}</span>
      </a>
  {% endcase %}
{% endfor %}
